<header>
    <div class="logo">
        <a href="/pokemons"><img src="/public/image/pokemons/pokeball-logo.png" alt="pokeball-logo" width="50px" height="50px"></a>
    </div>
    <h1>Pokédex</h1>
    <div class="login">
        {{#usuario}}
            <form action='/login/logout'>
                <input type='submit' value='Cerrar Sesión' class='modificar-button' style='border-style:none;'>
            </form>
        {{/usuario}}
        {{^usuario}}
            <form action='/login/login' method='post'>
                <div class='container-inputs'>
                    <input type='text' name='usuario' placeholder='Usuario'>
                    <input type='password' name='contraseña' placeholder='Contraseña'>
                </div>
                <button class='btn-login' type='submit'>Login</button>
            </form>
        {{/usuario}}
    </div>
</header>

